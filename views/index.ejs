<% include ./partials/header %>

<h1>THIS IS THE INDEX PAGE! HELLO! :D</h1>

<% entries.forEach(function(entry) { %>
    <h2><%= entry.title %></h2>
    <p><%= entry.created.toDateString() %></p>
    <iframe width="420" height="315" src="<%= 'https:\/\/www.youtube.com/embed/'+ entry.video.substring(32) %>"></iframe>
    <p><%= entry.content.substring(0, 100) + "..." %></p>
    <span><a href="/entries/<%= entry._id %>">Read More</a></span>
<% }); %>

<% include ./partials/footer %>