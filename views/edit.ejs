<% include ./partials/header %>

<h1>Edit Vlog</h1>

<form action="/entries/<%= entry._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input id="title" name="entry[title]" type="text" value="<%= entry.title %>">
    <label for="video">Youtube URL</label>
    <input id="video" name="entry[video]" type="text" value="<%= entry.video %>">
    <label for="content">Content</label>
    <textarea id="content" name="entry[content]"><%= entry.content %></textarea>
    <button>Update Entry</button>
</form>

<% include ./partials/footer %>